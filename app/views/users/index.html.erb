<h1 align="center">ユーザー一覧</h1>
<% @users.each do |user| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li class="article-title">
          <%= link_to user.username, user_path(user) %>
        </li>
        <li><small><%= pluralize(user.article.count, "article") if user.articles %></small></li>
      </div>
    </div>
  </ul>
<% end %>